<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="210dp"
        tools:layout_editor_absoluteY="290dp">

        <Button
            android:id="@+id/botonSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adaptador Spinner" />

        <Button
            android:id="@+id/botonLista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adaptador Lista" />

        <Button
            android:id="@+id/botonRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adaptador Recycler" />

        <Button
            android:id="@+id/botonListaGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adaptador Grid" />


        <Button
            android:id="@+id/botonGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GridLayout" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>